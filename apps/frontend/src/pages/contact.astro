---
import Layout from '../layouts/Layout.astro';
import ContactForm from '../components/ContactForm.svelte';
---

<Layout>
  <main class="min-h-screen bg-[#F8F9FA] py-16 px-4">
    <div class="max-w-4xl mx-auto">
      <div class="text-center my-8">
        <h1 class="text-5xl font-bold text-secondary-foreground mb-6">
          Contact Us
        </h1>
        <p class="text-xl text-muted-foreground max-w-2xl mx-auto leading-relaxed">
          Feel free to reach out to us for any queries, feedback, or to get involved!
        </p>
      </div>

      <div class="grid lg:grid-cols-2 gap-12 items-start">
        <div class="bg-white rounded-2xl p-8 shadow-lg border">
          <h2 class="text-2xl font-semibold text-secondary-foreground mb-6">
            Send us a Message
          </h2>
          <ContactForm client:load />
        </div>

        <div class="space-y-8">
          <div class="bg-white rounded-2xl p-8 shadow-lg border">
            <h2 class="text-2xl font-semibold text-secondary-foreground mb-4">
              We'd Love to Hear From You!
            </h2>
            <p class="text-muted-foreground leading-relaxed">
              Whether you have questions about us, want to share your feedback, or are interested in getting involved, please don't hesitate to reach out. We value your input and are always looking for ways to connect with passionate individuals.
            </p>
          </div>

          <div class="bg-primary rounded-2xl p-8 text-white shadow-lg">
            <h3 class="text-xl font-semibold mb-4">
              Our Mission
            </h3>
            <p class="leading-relaxed">
              YouthUNITE is dedicated to empowering young people to become leaders of positive change in their communities and beyond. Together, we're building a brighter future.
            </p>
          </div>
        </div>
        
      </div>
    </div>
  </main>
</Layout>